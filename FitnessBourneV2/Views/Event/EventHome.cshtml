@model FitnessBourneV2.Models.EventHomeModel

@{
    ViewBag.Title = "EventHome";
}

<link rel="stylesheet" type="text/css" href="~/Content/EventDetails.css">
<div class="row" id="DetailsPane">
    <div class="col-md-10 col-md-offset-1" id="DetailsCol">
        <div class="row">
            <h1>Event Type</h1>
        </div>
        <div id="myCarousel" class="row carousel slide" data-interval="false">
            <!-- Indicators -->

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                @for (int i = 1; i < Model.eventList.Count; i++)
        {
            var pos = '"' + i.ToString() + '"';
            <li data-target="#myCarousel" data-slide-to=@pos></li>
}
            </ol>

            <!-- Left Indicator -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>

            <!-- Wrapper for slides -->
            <div class="carousel-inner col-md-8 col-md-offset-2">
                @for (int j = 0; j < Model.eventList.Count; j++)
                {
                    var className = "item";
                    if (j == 0)
                    {
                        className = className + " active";
                    }
                <div class="@className">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Event Start Datetime :</label>
                        </div>
                        <div class="col-md-3">
                            <label>Event End Datetime  :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.eventList[j].eventStartTime, new { @class = "eventStartDT", @readonly = "readonly" })
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.eventList[j].eventEndTime, new { @class = "eventEndDT", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Event Start Location :</label>
                        </div>
                        <div class="col-md-3">
                            <label>Event End Location  :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.eventList[j].startLoc, new { @class = "eventStartDT", @readonly = "readonly" })
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.eventList[j].stopLoc, new { @class = "eventEndDT", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Event Check Point Locations :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.eventList[j].checkPoints, new { @class = "checkPointLoc", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Total Distance :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.eventList[j].totalDistance, new { @class = "totalDistance", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Navigation Directions :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.eventList[j].navInstructions, new { @class = "navInstruction", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Seat Availability :</label>
                        </div>
                        <div class="col-md-3">
                            <label>Total Capacity  :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.eventList[j].seatAvailblity, new { @class = "seatavailability", @readonly = "readonly" })
                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(m => m.eventList[j].totalCapacity, new { @class = "totalcapacity", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
                 }
            </div>

            <!-- Right controls -->
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="row" id="MapPane">
    <div class="col-md-10 col-md-offset-1" id="MapOuterContainer">

    </div>
</div>
