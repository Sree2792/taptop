@model FitnessBourneV2.Models.HomeModel

@{
    ViewBag.Title = "Index";
}

<!-- reference to Leaflet CSS -->
<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
<link rel="stylesheet" type="text/css" href="~/Content/HomeIndex.css">

<!-- reference to Leaflet JavaScript -->
<script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
<script src="~/Scripts/HomeIndex.js"></script>

@using (Html.BeginForm("BtnAction", "Home", FormMethod.Post, new { @id = "mainForm", @class = "form-horizontal formPos", role = "form" }))
{

    <div id="one" class="row" style="position: fixed; top: 0px;">
        <div class="col-md-8 col-md-offset-2" id="MotivContainer">
            <div>
                <img src="~/Image/Motiv_Image1.jpg" class="motivBlock" />
                <div class="MotivTxt"><strong>"NOW IS THE TIME TO START LIVING THE LIFE YOU ALWAYS IMAGINED"</strong></div>
            </div>
        </div>
    </div>
    <div id="two" class="row">
        <div class="row">
            <div class="col-md-2 col-md-offset-5">
                <h1>ABOUT</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <span><strong>We are a fitness club that helps people engage in Fitness activities.</strong></span>
            </div>
        </div>
    </div>
    <div id="three" class="row">
        <div class="col-md-8 col-md-offset-2" id="MotivContainer">
            <div>
                <img src="~/Image/Motiv_Image2.jpg" class="motivBlock" />
                <div class="MotivTxt"><strong>"NOW IS THE TIME TO START LIVING THE LIFE YOU ALWAYS IMAGINED"</strong></div>
            </div>
        </div>
    </div>
    <div id="four" class="row">
        <div class="col-md-4">
            <img src="~/Image/Cycling.jpg" alt="Cycling" class="eventImg" />
        </div>
        <div class="col-md-4">
            <img src="~/Image/walking.jpg" alt="Walking" class="eventImg" />
        </div>
        <div class="col-md-4">
            <img src="~/Image/running.jpg" alt="Running" class="eventImg" />
        </div>
    </div>
    <div id="five" class="row">
        <div class="col-md-8 col-md-offset-2" id="MotivContainer">
            <div>
                <img src="~/Image/Motiv_Image3.jpg" class="motivBlock" />
                <div class="MotivTxt"><strong>"NOW IS THE TIME TO START LIVING THE LIFE YOU ALWAYS IMAGINED"</strong></div>
            </div>
        </div>
    </div>
    <div id="six" class="row">
        <div class="col-md-8 col-md-offset-2">
            <div>
                <img src="~/Image/Motiv_Image2.jpg" class="motivBlock" />
                <div class="MotivTxt"><strong>"NOW IS THE TIME TO START LIVING THE LIFE YOU ALWAYS IMAGINED"</strong></div>
            </div>
        </div>
    </div>
}

